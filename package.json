{
	"name": "php-code-actions",
	"displayName": "PHP Code Actions",
	"author": {
		"email": "nicolasgamboa.a@gmail.com",
		"name": "Nicol√°s Gamboa"
	},
	"repository": {
		"url": "https://github.com/ganvoa/php-code-actions"
	},
	"publisher": "ganvoa",
	"description": "",
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.63.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:php"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "php-code-actions.addConstructor",
				"title": "Add Constructor"
			},
			{
				"command": "php-code-actions.addProperty",
				"title": "Add Property"
			},
			{
				"command": "php-code-actions.addGetter",
				"title": "Add Getter"
			}
		],
		"configuration": [
			{
				"title": "PHP Code Actions",
				"properties": {
					"php-code-actions.getter.addPrefix": {
						"type": "boolean",
						"default": true,
						"description": "Adds 'get' prefix to generated getter function."
					}
				}
			}
		]
	},
	"license": "MIT",
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts --fix",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.0.0",
		"@types/node": "14.x",
		"@types/vscode": "^1.63.0",
		"@typescript-eslint/eslint-plugin": "^5.9.1",
		"@typescript-eslint/parser": "^5.9.1",
		"@vscode/test-electron": "^2.0.3",
		"eslint": "^8.6.0",
		"glob": "^7.2.0",
		"mocha": "^9.1.3",
		"ts-loader": "^9.2.6",
		"ts-mockito": "^2.6.1",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"webpack": "^5.66.0",
		"webpack-cli": "^4.9.1"
	}
}
